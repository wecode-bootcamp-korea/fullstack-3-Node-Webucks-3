generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Categories{
  id Int @id @default(autoincrement())
  name String @db.VarChar(40)
  products Product[]
  @@map("categories")
}

model Product{
  id Int @id @default(autoincrement())
  koreanName String @map("korean_name")
  englishName String @map("english_name")
  category String?
  categories Categories @relation(fields: [categoryId], references: [id])
  categoryId Int @map("category_id")
  imageUrl String @db.Text @map("image_url")
  detail Detail[]
  @@map("product")
}

model Detail{
  id Int @id @default(autoincrement())
  koreanName String @map("korean_name")
  englishName String @map("english_name")
  description String @db.Text
  allergens String?
  // nutritionId Int? @map("nutrition_id")
  // productId Int? @map("product_id")
  // nutrition Nutrition @relation(fields: [nutritionId], references: [id])
  // product Product @relation(fields: [productId], references: [id])
  nutrition Nutrition[]
  product Product[]
  @@map("detail")
}

model Nutrition{
  id Int @id @default(autoincrement())
  calories Decimal
  fat Decimal
  sodium Decimal
  protein Decimal
  caffein Decimal
  detail Detail[]
  // detail Detail @relation(fields: [nutritionId], references: [id])
  @@map("nutrition")
}
